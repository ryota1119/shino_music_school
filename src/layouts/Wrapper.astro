---
import ContentsTitle from '@components/ContentsTitle.astro'

interface Props {
    collor: string
    title?: string
}

const collor = Astro.props.collor
const title = Astro.props.title
---
<div class={collor}>
    <div class="max-w-5xl mx-auto px-4 py-8 sm:px-6 sm:py-10 lg:px-8 lg:py-16">
        {title &&
                <ContentsTitle title={title}/>
        }
        <slot/>
    </div>
</div>